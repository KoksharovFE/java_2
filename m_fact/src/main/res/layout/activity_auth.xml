<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.astra.app.factograph.m_fact.Auth">

    <TextView
        android:text="@string/Auth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:id="@+id/text_auth"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_auth"
        android:id="@+id/button"
        android:layout_below="@+id/password_field"
        android:onClick="buttonClicked"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="@string/login"
        android:ems="10"
        android:id="@+id/login_field"
        android:layout_below="@+id/text_auth"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/password_field"
        android:layout_below="@+id/login_field"
        android:layout_alignLeft="@+id/login_field"
        android:layout_alignStart="@+id/login_field"
        android:text="@string/voids" />

    <TextView
        android:text="@string/voids"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_auth_below"
        android:layout_below="@+id/button"
        android:textColor="#ffff0000"
        android:layout_alignRight="@+id/password_field"
        android:layout_alignEnd="@+id/password_field" />
</RelativeLayout>
