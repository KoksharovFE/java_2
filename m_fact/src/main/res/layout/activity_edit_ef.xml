<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.astra.app.factograph.m_fact.EditEF">

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ef_edit_button"
            android:onClick="buttonClicked"
            android:text="@string/ef_edit_confirm"></Button>

        <EditText
            android:layout_height="wrap_content"
            android:id="@+id/ef_edit_Name"
            android:layout_width="203dp"
            android:hint="Name"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/todo_edit_button"></EditText>

        <Spinner
            android:id="@+id/type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:entries="@array/Type"></Spinner>
        <Spinner
            android:id="@+id/category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:entries="@array/Category"></Spinner>

        <EditText
            android:layout_width="227dp"
            android:layout_height="fill_parent"
            android:id="@+id/ef_edit_description"
            android:hint="Description"
            android:gravity="top"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/ef_edit_Name"></EditText>
    </TableLayout>

</RelativeLayout>
